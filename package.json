{
  "name": "web-erp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run validate-env && vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 15",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e",
    "validate-env": "node scripts/validate-env.cjs",
    "dev:secure": "npm run validate-env && npm run dev",
    "postinstall": "node scripts/postinstall.cjs",
    "ci:check": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@headlessui/react": "^1.7.18",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@testing-library/react": "^16.0.0",
    "axios": "^1.12.0",
    "daisyui": "^4.7.0",
    "firebase": "^12.0.0",
    "framer-motion": "^11.0.3",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.350.0",
    "postcss-import": "^16.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.22.0",
    "styled-components": "^6.1.8",
    "tailwind-styled-components": "^2.2.0",
    "twin.macro": "^3.4.1",
    "vite-plugin-babel-macros": "^1.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-security": "^1.7.1",
    "jsdom": "^24.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  }
}
